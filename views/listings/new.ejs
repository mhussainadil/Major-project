<% layout('/layouts/boilerPlate') -%>
  <body>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
      <input required name="listings[title]" placeholder="enter title" type="text" />
      <br /><br />
      <textarea
        name="listings[description]"
        placeholder="enter description"
      ></textarea>
      <br /><br />
      <input
        name="listings[image]"
        placeholder="enter image URL/Link"
        type="text"
      />
      <br /><br />
      <input name="listings[price]" placeholder="enter price" type="number" />
      <br /><br />
      <input name="listings[country]" placeholder="enter country" type="text" />
      <br /><br />
      <input
        name="listings[location]"
        placeholder="enter location"
        type="text"
      />
      <br /><br />
      <button>Add</button>
    </form>
  </body>
