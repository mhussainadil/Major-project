<% layout('/layouts/boilerPlate') -%>

  <body>
    <h1 class="mt-3">All Listings</h1>

    <div class="container">
      <div class="header"></div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let list of data){%>

      <a href="/listings/<%=list._id%>">
          <div class="card">
          <img class="card-img-top" src="<%=list.image%>"  style="height: 20rem;" alt="Card image cap">
           <div class="card-img-overlay">
    <!-- <h5 class="card-title">Card title</h5>
    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
    <p class="card-text">Last updated 3 mins ago</p> -->
  </div>
          <div class="card-body">
            <h5 class="card-title">
           <b>   <%=list.title%></b>
            </h5>
            <p class="card-text">
           Price: <b> &#8377;<%=list.price? Number(list.price).toLocaleString("en-IN") : "N/A"%></b> / night
            </p>
            <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
          </div>
        </div>
      </a>
        <%}%>
    </div>
    </div>
  </body>