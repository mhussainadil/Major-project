<% layout('/layouts/boilerPlate') -%>

<body>
  <h3>Edit Your Listing</h3>
  <form method="POST" action="/listings/<%=listItem._id%>?_method=PUT">
    <input name="title" placeholder="enter title" type="text" value="<%=listItem.title%>" />
    <br /><br />
    <textarea name="description" placeholder="enter description">
    <%=listItem.description%>
    </textarea>
    <br /><br />
    <input value="<%=listItem.image%>" name="image" placeholder="enter image URL/Link" type="text" />
    <br /><br />
    <input name="price" placeholder="enter price" type="number" value="<%=listItem.price%>" />
    <br /><br />
    <input name="country" placeholder="enter country" type="text" value="<%=listItem.country%>" />
    <br /><br />
    <input value="<%=listItem.location%>" name="location" placeholder="enter location" type="text" />
    <br /><br />
    <button>Add</button>
  </form>
</body>
